<!--header-->
<div class="header">
    <div class="container">
        <div class="head">
            <div class=" logo">
                <a href="@Url.Action("Welcome","Store")"><img src="~/Libs/Store/images/logo.png" alt=""></a>
            </div>
        </div>
    </div>
    <div class="header-top">
        <div class="container">
            <div class="col-sm-5 col-md-offset-2  header-login">
                <ul>
                    @if (Session["User_Type"]=="Guest")
                    {
                    <li><a href="@Url.Action("Login","Account")">Login</a></li>    
                    }
                    else if (Session["User_Type"] != "Guest")
                    {
                    <li><a href="@Url.Action("Logout","Account")">( @Session["User_Name"] )Logout</a></li>    
                    }
                    
                    <li><a href="@Url.Action("Register","Account")">Register</a></li>
                    <li><a href="@Url.Action("Cart","Store")">Checkout</a></li>
                </ul>
            </div>

            <div class="col-sm-5 header-social">
                <ul>
                    <li><a href="http://www.megabit.pk"><i></i></a></li>
                    <li><a href="http://www.megabit.pk"><i class="ic1"></i></a></li>
                    <li><a href="http://www.megabit.pk"><i class="ic2"></i></a></li>
                    <li><a href="http://www.megabit.pk"><i class="ic3"></i></a></li>
                    <li><a href="http://www.megabit.pk"><i class="ic4"></i></a></li>
                </ul>

            </div>
            <div class="clearfix"> </div>
        </div>
    </div>

    <div class="container">

        <div class="head-top">

            <div class="col-sm-8 col-md-offset-2 h_menu4">
                <nav class="navbar nav_bottom" role="navigation">

                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header nav_2">
                        <button type="button" class="navbar-toggle collapsed navbar-toggle1" data-toggle="collapse" data-target="#bs-megadropdown-tabs">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-megadropdown-tabs">
                        <ul class="nav navbar-nav nav_1">
                            <li><a class="color" href="@Url.Action("Welcome","Store")">Home</a></li>

                            <li class="dropdown mega-dropdown active">
                                <a class="color1" href="@Url.Action("DisplayProducts","Store")" class="" data-toggle="dropdown">Products<span class=""></span></a>
                                
                            </li>
                            <li class="dropdown mega-dropdown active">
                                <a class="color2" href="@Url.Action("DisplayShops","Store")" class="" data-toggle="dropdown">Shops<span class=""></span></a>
                                
                            </li>
                            <li><a class="color4" href="@Url.Action("Contact","Store")">FAQs</a></li>
                            <li><a class="color6" href="@Url.Action("Contact","Store")">Contact</a></li>
                        </ul>
                    </div><!-- /.navbar-collapse -->

                </nav>
            </div>
            <div class="col-sm-2 search-right">
                <ul class="heart">
                    <li>
                        <a href="@Url.Action("Cart","Store")">
                            <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
                        </a>
                    </li>
                    <li><a class="play-icon popup-with-zoom-anim" href="#small-dialog"><i class="glyphicon glyphicon-search"> </i></a></li>
                </ul>
                <div class="cart box_1">
                    <a href="@Url.Action("Cart","Store")">
                        <h3>
                            <div class="total">
                                <span class="simpleCart_total"></span>
                            </div>
                            <img src="~/Libs/Store/images/cart.png" alt="" />
                        </h3>
                    </a>
                    <p><a href="javascript:;" class="simpleCart_empty">
                        @{
                            string uid = Session["User_ID"].ToString();
                            Eproject.Models.DataModel dm = new Eproject.Models.DataModel();
                            List<Eproject.Models.cart> c = dm.carts.Where(x => x.User_ID == uid).ToList();
                            <text>@c.Count() items</text>
    }
</a></p>

                </div>
                <div class="clearfix"> </div>

                <!----->
                <!---pop-up-box---->
                <link href="~/Libs/Store/css/popuo-box.css" rel="stylesheet" type="text/css" media="all" />
                <script src="~/Libs/Store/js/jquery.magnific-popup.js" type="text/javascript"></script>
                <!---//pop-up-box---->
                <div id="small-dialog" class="mfp-hide">
                    <div class="search-top">
                        <div class="login-search">
                            <form method="get" action="@Url.Action("Search", "Store")">
                                <input type="submit" value="">
                                <input type="text" name="keyword" placeholder="Search.." onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search..';}"/>
                            </form>
                        </div>
                        <p>Search Keywords..</p>
                    </div>
                </div>
                <script>
                    $(document).ready(function () {
                        $('.popup-with-zoom-anim').magnificPopup({
                            type: 'inline',
                            fixedContentPos: false,
                            fixedBgPos: true,
                            overflowY: 'auto',
                            closeBtnInside: true,
                            preloader: false,
                            midClick: true,
                            removalDelay: 300,
                            mainClass: 'my-mfp-zoom-in'
                        });

                    });
                </script>
                <!----->
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>