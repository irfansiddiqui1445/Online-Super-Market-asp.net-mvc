@model IEnumerable<Eproject.Models.product>
@{
    ViewBag.Title = "Welcome";
    Layout = "~/Views/Shared/Body.cshtml";
}

<div class="banner">
    <div class="container">
        <section class="rw-wrapper">
            <h1 class="rw-sentence">
                <span>Fashion &amp; Beauty</span>
                <div class="rw-words rw-words-1">
                    <span>Beautiful Designs</span>
                    <span>Sed ut perspiciatis</span>
                    <span> Totam rem aperiam</span>
                    <span>Nemo enim ipsam</span>
                    <span>Temporibus autem</span>
                    <span>intelligent systems</span>
                </div>
                <div class="rw-words rw-words-2">
                    <span>We denounce with right</span>
                    <span>But in certain circum</span>
                    <span>Sed ut perspiciatis unde</span>
                    <span>There are many variation</span>
                    <span>The generated Lorem Ipsum</span>
                    <span>Excepteur sint occaecat</span>
                </div>
            </h1>
        </section>
    </div>
</div>
<!--content-->
<div class="content">
    <div class="container">
        
        <!--products-->
        
        <div class="content-mid">
            <h3>Trending Items</h3>
            <label class="line"></label>
            
            <div class="mid-popular">
@foreach (var item in @Model)
{
                <div class="col-md-3 item-grid simpleCart_shelfItem">
                    <div class=" mid-pop">
                        <div class="pro-img">
                            <img src="@Url.Content(item.Image)" class="img-responsive" alt="">
                            <div class="zoom-icon ">
                                <a class="picture" href="images/pc4.jpg" rel="title" class="b-link-stripe b-animate-go  thickbox"><i class="glyphicon glyphicon-search icon "></i></a>
                                <a href="@Url.Action("Product", "Store", new {id=item.Pro_ID })"><i class="glyphicon glyphicon-menu-right icon"></i></a>
                            </div>
                        </div>
                        <div class="mid-1">
                            <div class="women">
                                <div class="women-top">
                                    <span>
     @{
    Eproject.Models.DataModel dm = new Eproject.Models.DataModel();
    Eproject.Models.brand b = dm.brands.Single(x=>x.Brand_Id==item.Brand);
    string path = Path.GetRandomFileName();
path = path.Replace(".", "");
    }
                                        @b.Brand_Name
                                    </span>
                                    <h6><a href="@Url.Action("Product", "Store")">@item.Pro_Name</a></h6>
                                </div>
                                <div class="img item_add">
                                    
                                    <a href="@Url.Action("AddToCart", "Store", new {
                                         Product_ID = item.Pro_ID,
                                         Quantity = "1",
                                         User_ID = Session["User_ID"].ToString(),
                                         Date_Time= DateTime.Now.ToString(),
                                         Cart_ID = path})"><img src="~/Libs/Store/images/ca.png" alt=""></a>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="mid-2">
                                <p><em class="item_price">Rs:@item.Price</em></p>
                                <div class="block">
                                    <div class="starbox small ghosting"> </div>
                                </div>

                                <div class="clearfix"></div>
                            </div>

                        </div>
                    </div>
                </div>
}   
                <div class="clearfix"></div>
            </div>
        </div>   
        

        
        <!--//products-->
        <!--brand-->
        @Html.Partial("SideBrands")
        <!--//brand-->
    </div>

</div>