@model IEnumerable<Eproject.Models.publicuseraccount>

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/Body.cshtml";
}

<div class="container">

    <div class="register col-lg-10">
        <form method="post" action="@Url.Action("Register","Account")">
            <div class="  register-top-grid">
                <br /><br /><br /><br />
                <h3>PERSONAL INFORMATION</h3>
                <div class="mation">

                    <div class="contact-form">

                        <span>Full Name<label></label></span>
                        <input type="text" name="UserName" class="form-control">

                        
                        <div class="clearfix"> </div>

                        <span>Addresse<label></label></span>
                        <input type="text" name="Address" class="form-control">

                        <div class="clearfix"> </div>


                        <span>Contact<label></label></span>
                        <input type="tel" name="Contact" class="form-control">

                        <div class="clearfix"> </div>


                        <span>Cradit Card No <label>#</label></span>
                        <input type="tel" name="CCN" class="form-control">

                        <div class="clearfix"> </div>

                        <span>Cradit Card Expiry Date<label></label></span>
                        <input type="date" name="CCEx" class="form-control">

                    </div>


                </div>



                <div class="clearfix"> </div>

            </div>
            <div class="  register-bottom-grid">
                <h3>LOGIN INFORMATION</h3>
                <div class="mation">
                    <span>Email<label>*</label></span>
                    <input type="email" name="Email" class="form-control">
                    <span>Password<label>*</label></span>
                    <input type="password" name="Password" class="form-control">
                </div>
            </div>

            <div class="clearfix"> </div>
            <div class="register-but">
                @{
                    string path = Path.GetRandomFileName();
                    path = path.Replace(".", ""); 
                    
                   
                <input type="hidden" name="User_ID" value="@path"/>
                <input type="hidden" name="UserType" value="Customer" />
                    

}
                
                <input type="submit" value="Register" class="btn-success col-lg-12" />
            </div>
        </form>
        <br /><br /><br /><br /><br />
    </div>

    <div class="alert-danger">@ViewBag.Mesage</div>



    </div>

    