@model IEnumerable<Eproject.Models.brand>

@{
    ViewBag.Title = "AllBrands";
    Layout = "~/Views/Shared/Admin/Body.cshtml";

    string path = Path.GetRandomFileName();
    path = path.Replace(".", "");
}




<div class="row">
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-lg-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Add New Brand</div>
                <div style="float:right; font-size: 80%; position: relative; top:-10px"></div>
            </div>
            <div style="padding-top:30px" class="panel-body">
                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                <form method="post" action="@Url.Action("AddBrand","Admin")" class="form-horizontal" role="form">

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input type="text" class="form-control" name="Brand_Name" value="" placeholder="Brand_Name">
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <textarea class="form-control" name="Brand_Discription"></textarea>
                    </div>
                    <input type="hidden" name="Brand_Id" value="@path" />
                    <input type="hidden" name="Brand_Logo" value="No" />

                    <input type="submit" value="Add" class="form-control btn btn-success col-lg-12" />






                </form>

            </div>
        </div>
    </div>


</div>
<br />
<div class="clearfix"></div>
<br />

<div class="row">

    @foreach (var item in @Model)
    {



        <div class="col-sm-6 col-md-3">
            <div class="col-md-12 feature-box">
                <span class="glyphicon glyphicon-shopping-cart icon"></span>
                <form action="@Url.Action("UpdateBrand","Admin")" method="post">
                    <h4>

                        <input style="border:none" type="text" class="form-control " border="0" value="@item.Brand_Name" name="Brand_Name" />
                    </h4>
                    <p>
                        <textarea name="Brand_Discription" style="border:none">
                            @item.Brand_Discription
                        </textarea>
                        <input type="hidden" value="@item.Brand_Id" name="Brand_Id" />
                        <input type="hidden" value="@item.Brand_Logo" name="Brand_Logo" />
                        <input type="submit" class="btn btn-success site-btn" value="Change" />
                    </p>
                </form>
                <a href="@Url.Action("DeleteBrand", "Admin", new {id=@item.Brand_Id })" class="btn btn-primary site-btn">Deletes</a>
            </div>
        </div> <!-- End Col -->

    }
</div>


<style>
    /* Site Heading */
    .site-heading h3 {
        font-size: 40px;
        margin-bottom: 10px;
        font-weight: 600;
    }

    .border {
        background: #e8e8e8;
        height: 1px;
        width: 40%;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 45px;
        float: left;
    }

    /* Feature-CSS */

    .icon {
        color: #fff;
        padding: 15px;
        background: #323232;
        font-size: 50px;
        border-radius: 90px;
        border: 10px solid #323232;
    }

    .feature-box {
        text-align: center;
        padding: 20px;
        transition: .5s;
        margin-bottom: 30px;
        border: 1px solid #e8e8e8;
    }

        .feature-box:hover {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }

        .feature-box h4 {
            font-size: 20px;
            font-weight: 600;
            margin: 25px 0 15px;
        }
</style>