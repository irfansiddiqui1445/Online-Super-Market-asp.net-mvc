@model IEnumerable<Eproject.Models.product>

@{
    ViewBag.Title = "AllProducts";
    Layout = "~/Views/Shared/Admin/Body.cshtml";
}




<div class="women_main">
    <!-- start content -->
    <div class="w_content">
        
        <!-- grids_of_4 -->
        <div class="grids_of_4">


            @foreach (var item in Model)
            {
                
            
            <div class="grid1_of_4">
                <div class="content_box">
                    <a href="details.html">
                        <img src="@Url.Content(@item.Image)" class="img-responsive" alt="">
                    </a>
                    <h4><a href="details.html">@item.Pro_Name</a></h4>
                    <p>@item.Des</p>
                    <div class="grid_1 simpleCart_shelfItem">

                        <div class="item_add"><span class="item_price"><h6>ONLY @item.Price </h6></span></div>
                        <div class="item_add"><span class="item_price"><a href="@Url.Action("ViewProduct", "Admin", new { id = @item.Pro_ID })">View Product</a></span></div>
                    </div>
                </div>
            </div>
            }
            
            
            
            
            
             <div class="clearfix"></div>



        </div>
      


        <!-- end grids_of_4 -->


    </div>
    <div class="clearfix"></div>
    <!-- end content -->
    
    
</div>