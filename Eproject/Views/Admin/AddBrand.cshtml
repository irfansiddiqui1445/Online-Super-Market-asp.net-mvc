@model Eproject.Models.brand

@{
    ViewBag.Title = "AddBrand";
    Layout = "~/Views/Shared/Admin/Body.cshtml";
}


@{string path = Path.GetRandomFileName();
path = path.Replace(".", "");
}
<div class="progressbar-heading grids-heading">

</div>
<div class="panel panel-widget forms-panel">
    <div class="forms">
        <div class="form-grids widget-shadow" data-example-id="basic-forms">
            <div class="form-title">
                <h4>Add New Brand :</h4>
            </div>
            <div class="form-body">
                <form method="post" action="@Url.Action("AddBrand", "Admin")">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Name :</label>
                        <input type="text" class="form-control" name="Brand_Name" placeholder="Name" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Select Image :</label>
                        <input type="text" class="form-control" name="Brand_Logo" placeholder="Name" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Description :</label>
                        <textarea class="form-control" name="Brand_Discription" rows="5"></textarea>
                    </div>
                    <input type="hidden" name="Brand_Id" value="@path" />
                    

                    <button type="submit" class="btn btn-default">Add New Brand</button>
                </form>
            </div>
        </div>
    </div>
</div>
